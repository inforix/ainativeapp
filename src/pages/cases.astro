---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getLangFromUrl, useTranslations } from '../i18n/languages';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={t('cases.title')} description={t('cases.intro')} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Hero Section -->
			<section class="hero">
				<h1>{t('cases.title')}</h1>
				<p class="hero-subtitle">{t('cases.subtitle')}</p>
				<p class="hero-description">{t('cases.intro')}</p>
			</section>

			<!-- Development & Code Generation -->
			<section class="cases-section">
				<div class="container">
					<h2 class="category-title">
						<span class="category-icon">üíª</span>
						{t('cases.development.title')}
					</h2>
					
					<div class="case-card featured">
						<div class="case-header">
							<div class="case-logo">
								<span class="logo-text">GitHub</span>
							</div>
							<div class="case-title-group">
								<h3>{t('cases.copilot.title')}</h3>
								<p class="company">{t('cases.copilot.company')}</p>
							</div>
						</div>
						<p class="case-description">{t('cases.copilot.desc')}</p>
						<div class="case-impact">
							<strong>Impact:</strong> {t('cases.copilot.impact')}
						</div>
						<div class="metrics-grid">
							<div class="metric">
								<div class="metric-value">92%</div>
								<div class="metric-label">{t('cases.copilot.metric1').split(' ').slice(1).join(' ')}</div>
							</div>
							<div class="metric">
								<div class="metric-value">50%+</div>
								<div class="metric-label">{t('cases.copilot.metric2').split(' ').slice(1).join(' ')}</div>
							</div>
							<div class="metric">
								<div class="metric-value">30+</div>
								<div class="metric-label">{t('cases.copilot.metric3').split(' ').slice(1).join(' ')}</div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Creative & Design -->
			<section class="cases-section alt">
				<div class="container">
					<h2 class="category-title">
						<span class="category-icon">üé®</span>
						{t('cases.creative.title')}
					</h2>
					
					<div class="case-card featured">
						<div class="case-header">
							<div class="case-logo midjourney">
								<span class="logo-text">MJ</span>
							</div>
							<div class="case-title-group">
								<h3>{t('cases.midjourney.title')}</h3>
								<p class="company">{t('cases.midjourney.company')}</p>
							</div>
						</div>
						<p class="case-description">{t('cases.midjourney.desc')}</p>
						<div class="case-impact">
							<strong>Impact:</strong> {t('cases.midjourney.impact')}
						</div>
						<div class="metrics-grid">
							<div class="metric">
								<div class="metric-value">15M+</div>
								<div class="metric-label">Active Users</div>
							</div>
							<div class="metric">
								<div class="metric-value">91%</div>
								<div class="metric-label">Profit Margin</div>
							</div>
							<div class="metric">
								<div class="metric-value">2.5h</div>
								<div class="metric-label">Complex Design Time</div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Healthcare & Life Sciences -->
			<section class="cases-section">
				<div class="container">
					<h2 class="category-title">
						<span class="category-icon">üß¨</span>
						{t('cases.healthcare.title')}
					</h2>
					
					<div class="case-card featured">
						<div class="case-header">
							<div class="case-logo deepmind">
								<span class="logo-text">DM</span>
							</div>
							<div class="case-title-group">
								<h3>{t('cases.alphafold.title')}</h3>
								<p class="company">{t('cases.alphafold.company')}</p>
							</div>
						</div>
						<p class="case-description">{t('cases.alphafold.desc')}</p>
						<div class="case-impact">
							<strong>Impact:</strong> {t('cases.alphafold.impact')}
						</div>
						<div class="metrics-grid">
							<div class="metric">
								<div class="metric-value">200M+</div>
								<div class="metric-label">Proteins Predicted</div>
							</div>
							<div class="metric">
								<div class="metric-value">90%+</div>
								<div class="metric-label">Accuracy Rate</div>
							</div>
							<div class="metric">
								<div class="metric-value">Minutes</div>
								<div class="metric-label">vs Months Processing</div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Business Operations -->
			<section class="cases-section alt">
				<div class="container">
					<h2 class="category-title">
						<span class="category-icon">üíº</span>
						{t('cases.business.title')}
					</h2>
					
					<div class="cases-grid">
						<div class="case-card">
							<div class="case-header">
								<div class="case-logo microsoft">
									<span class="logo-text">M365</span>
								</div>
								<div class="case-title-group">
									<h3>{t('cases.copilot365.title')}</h3>
									<p class="company">{t('cases.copilot365.company')}</p>
								</div>
							</div>
							<p class="case-description">{t('cases.copilot365.desc')}</p>
							<div class="case-impact">
								<strong>Impact:</strong> {t('cases.copilot365.impact')}
							</div>
							<div class="metrics-grid">
								<div class="metric">
									<div class="metric-value">$50M</div>
									<div class="metric-label">Annual Savings</div>
								</div>
								<div class="metric">
									<div class="metric-value">94%</div>
									<div class="metric-label">Time Reduction</div>
								</div>
							</div>
						</div>

						<div class="case-card">
							<div class="case-header">
								<div class="case-logo sephora">
									<span class="logo-text">S</span>
								</div>
								<div class="case-title-group">
									<h3>{t('cases.sephora.title')}</h3>
									<p class="company">{t('cases.sephora.company')}</p>
								</div>
							</div>
							<p class="case-description">{t('cases.sephora.desc')}</p>
							<div class="case-impact">
