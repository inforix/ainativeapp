---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import LanguagePicker from '../../components/LanguagePicker.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/languages';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!doctype html>
<html lang="zh">
	<head>
		<BaseHead title={t('site.title')} description={t('site.description')} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Hero Section -->
			<section class="text-center py-16 bg-gradient-primary text-white -mx-8 mb-12">
				<h1 class="text-5xl md:text-6xl font-bold mb-2">{t('hero.title')}</h1>
				<p class="text-xl mb-8 opacity-80">{t('hero.subtitle')}</p>
				<div class="max-w-3xl mx-auto mb-8 px-8">
					<p class="mb-4 text-lg leading-relaxed">{t('hero.description')}</p>
				</div>
				<div class="flex flex-col sm:flex-row gap-4 justify-center items-center flex-wrap">
					<a href="#introduction" class="btn-primary">{t('hero.learnMore')}</a>
					<a href="/zh/cases" class="btn-secondary">{t('hero.viewCases')}</a>
				</div>
			</section>

			<!-- Introduction Section -->
			<section id="introduction" class="py-16">
				<h2 class="text-4xl font-bold text-center mb-12 text-gray-800">{t('intro.title')}</h2>
				
				<div class="container-custom">
					<div class="mb-8">
						<p class="text-lg leading-relaxed mb-6">{t('intro.description')}</p>
						
						<h4 class="text-xl font-semibold mb-4 text-gray-800">{t('intro.characteristics')}</h4>
						<ul class="list-none p-0">
							<li class="py-3 border-b border-gray-200 last:border-b-0"><strong>{t('intro.char1')}</strong> - {t('intro.char1.desc')}</li>
							<li class="py-3 border-b border-gray-200 last:border-b-0"><strong>{t('intro.char2')}</strong> - {t('intro.char2.desc')}</li>
							<li class="py-3 border-b border-gray-200 last:border-b-0"><strong>{t('intro.char3')}</strong> - {t('intro.char3.desc')}</li>
							<li class="py-3 border-b border-gray-200 last:border-b-0"><strong>{t('intro.char4')}</strong> - {t('intro.char4.desc')}</li>
							<li class="py-3 border-b border-gray-200 last:border-b-0"><strong>{t('intro.char5')}</strong> - {t('intro.char5.desc')}</li>
						</ul>
					</div>

					<div>
						<h4 class="text-xl font-semibold mb-4 text-gray-800">{t('benefits.title')}</h4>
						<div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
							<div class="p-6 bg-gray-50 rounded-xl border-l-4 border-primary-500">
								<h5 class="text-lg font-semibold text-gray-800 mb-4">{t('benefits.efficiency.title')}</h5>
								<p class="mb-2 leading-relaxed">{t('benefits.efficiency.desc')}</p>
							</div>
							<div class="p-6 bg-gray-50 rounded-xl border-l-4 border-primary-500">
								<h5 class="text-lg font-semibold text-gray-800 mb-4">{t('benefits.personalization.title')}</h5>
								<p class="mb-2 leading-relaxed">{t('benefits.personalization.desc')}</p>
							</div>
							<div class="p-6 bg-gray-50 rounded-xl border-l-4 border-primary-500">
								<h5 class="text-lg font-semibold text-gray-800 mb-4">{t('benefits.scalability.title')}</h5>
								<p class="mb-2 leading-relaxed">{t('benefits.scalability.desc')}</p>
							</div>
							<div class="p-6 bg-gray-50 rounded-xl border-l-4 border-primary-500">
								<h5 class="text-lg font-semibold text-gray-800 mb-4">{t('benefits.future.title')}</h5>
								<p class="mb-2 leading-relaxed">{t('benefits.future.desc')}</p>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Quick Links -->
			<section class="py-16 bg-gray-50">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8 container-custom">
					<a href="/zh/how" class="card p-8 no-underline text-inherit">
						<h3 class="text-primary-500 mb-4 text-xl font-semibold">{t('links.how.title')}</h3>
						<p class="mb-2 leading-relaxed">{t('links.how.desc')}</p>
					</a>
					<a href="/zh/cases" class="card p-8 no-underline text-inherit">
						<h3 class="text-primary-500 mb-4 text-xl font-semibold">{t('links.cases.title')}</h3>
						<p class="mb-2 leading-relaxed">{t('links.cases.desc')}</p>
					</a>
					<a href="/zh/about" class="card p-8 no-underline text-inherit">
						<h3 class="text-primary-500 mb-4 text-xl font-semibold">{t('links.about.title')}</h3>
						<p class="mb-2 leading-relaxed">{t('links.about.desc')}</p>
					</a>
				</div>
			</section>
		</main>
		<Footer />
		
	</body>
</html>