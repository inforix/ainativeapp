---
import { getLangFromUrl, useTranslations } from '../i18n/languages';
import { SITE_TITLE } from '../consts';

const today = new Date();
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Language switching logic
const currentPath = Astro.url.pathname;
let pathWithoutLang;

if (lang === 'zh') {
  // 当前是中文，去除 /zh 前缀
  pathWithoutLang = currentPath.startsWith('/zh/') ? currentPath.substring(3) : currentPath;
  if (pathWithoutLang === '' || pathWithoutLang === '/zh') pathWithoutLang = '/';
} else {
  // 当前是英文，保持原路径
  pathWithoutLang = currentPath;
}

const alternateUrl = lang === 'en' ? '/zh' + pathWithoutLang : pathWithoutLang;
---

